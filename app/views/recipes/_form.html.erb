<%= form_for([@event, @event.recipes.build]) do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :instruction %><br>
		<%= f.text_area :instruction %>
	</p>

	<p>
		<%= f.label :course %><br>
		<%= f.text_field :course %>
	</p>

	<p>
		<%= f.submit %>
	</p>	
<% end %>